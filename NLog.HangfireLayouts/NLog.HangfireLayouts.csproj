<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DebugType>portable</DebugType>
    <AssemblyVersion>1.1.4.0</AssemblyVersion>
    <Version>1.1.4</Version>
    <PackageId>Bonura.NLog.HangfireLayouts</PackageId>
    <Authors>Diego Bonura</Authors>
    <Description>Render layouts for Hangfire</Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/meriturva/NLog.HangfireLayouts</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Bonura.Hangfire.PerformContextAccessor" Version="1.3.0" />
    <PackageReference Include="NLog" Version="5.2.4" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
